{
  "manifest_version": 3,
  "name": "Amazon Product Scraper",
  "version": "1.0",
  "description": "Scrape product data from Amazon.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.amazon.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
